/* pages/station/station.wxss */
.viewWrap {
  min-height: 100vh;
  border: 0px solid red;
}
.divWrap {
  display: block;
  height: 100%;
  border: 0px solid red;
  position: relative;
}
.listWrap {
  display: block;
  width: 92%;
  margin: 0 auto;
  border: 0px solid red;
  margin-bottom: 50px;
  margin-top: 45px;
}
.myRadioStyle {
  border: 0px solid red;
  display: block;
  height: 40px;
  line-height: 40px;
  margin-bottom: 2px;
  border-bottom: 1px solid #eee;
}
.confirmBtn {
  display: block;
  width: 92%;
  margin: 0 auto;
  position: fixed;
  bottom: 0px;
  left: 4%;
}
.textStyle {
  white-space: nowrap;
  overflow: auto;
  text-overflow:ellipsis;
  font-size: 14px;
  overflow-x:scroll;
}
.searchInp {
  display: block;
  width: 92%;
  height: 40px;
  border: 0px solid red;
  position: fixed;
  top: 0;
  left: 4%;
  background-color: #fff;
  z-index: 100;
  box-shadow:0px 10px 5px -10px #ccc;
}
.searchInp input {
  display: inline-block;
  width: 80%;
  height: 100%;
  border: 0px solid green;
  float: left;
}
.searchInp span {
  display: inline-block;
  width: 20%;
  height: 100%;
  border: 0px solid red;
  float: right;
  text-align: center;
  line-height: 40px;
  border-radius: 6px;
  background-color: #004898;
  color: #fff;
}
.tx {
  color: #F39800;
}