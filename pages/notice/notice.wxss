/* pages/notice/notice.wxss */
.viewWrap {
  min-height: 100vh;
  border: 0px solid red;
}
.divWrap {
  display: block;
  height: 100%;
  border: 0px solid red;
  position: relative;
}
.seledWrap {
  display: block;
  width: 92%;
  margin: 0 auto;
}
.noticeBlock {
  display: block;
  max-height: 260px;
  border: 1px solid #fcfcfc;
  border-radius: 10px;
  background-color: rgba(0, 81, 255, 0.7);
  color: #fff;
  margin-bottom: 20px;
}
.noticeCont {
  display: block;
  box-sizing: border-box;
  width: 90%;
  max-height: 220px;
  margin: 0 auto;
  overflow: auto;
  padding: 10px;
}
.noticeFot {
  display: block;
  box-sizing: border-box;
  width: 90%;
  height: 40px;
  line-height: 40px;
  margin: 0 auto;
  border-top: 2px solid rgba(255, 196, 0, 0.9);
}
.seledOnce_no {
  display: block;
  width: 100%;
  height: 80px;
  text-align: center;
  line-height: 80px;
  color: #8C8C8C;
}
.tab {width: 100%; /*height:600rpx;*/ border:0rpx solid #cccccc; margin:20rpx auto;}
.tab .btns { height: 100rpx; display: flex; font-size: 16px;}
.tab .btns view {flex: 1; text-align: center; line-height:100rpx; color: #323232;}
.tab .btns .cur {border-bottom: 2px solid #004898; color: #004898;}
.tab .cons view {/*height: 480rpx;*/ display: none; text-align: center; /*line-height:480rpx; font-size:60rpx;*/}
.tab .cons .cur {display: block;}
.viewList {
  display: block;
  width: 100%;
  border: 0px solid #ddd;
  border-radius: 6px;
  max-height: 260px;
  margin-bottom: 10px;
  text-align: left;
  overflow: auto;
}
.contBlock {
  display: block;
  width: 100%;
  max-height: 230px;
  overflow: auto;
  color: #474747;
}
.pBlock {
  display: block;
  height: 30px;
  line-height: 30px;
  text-align: right;
  color: #8C8C8C;
  font-size: 14px;
}