/* pages/stuMsg/stuMsg.wxss */
.viewWrap {
  min-height: 100vh;
  border: 0px solid red;
}

.divWrap {
  display: block;
  height: 100%;
  border: 0px solid red;
  position: relative;
}
.titWrap {
  display: block;
  width: 100%;
  color: #16247B;
  font-size: 14px;
}
.msgWrap {
  display: block;
  width: 90%;
  margin: 0 auto;
  margin-top: 15px;
  border: 0px solid red;
  background-color: rgba(0, 255, 0, 0.13);
  border-radius: 10px;
}
.addIcon {
  display: inline-block;
  width: 24px;
  height: 24px;
  border: 0px solid red;
  background-color: #ddd;
  border-radius: 12px;
}
.addIcon image {
  display: inline-block;
  width: 99%;
  height: 99%;
  border: 0px solid red;
  margin-bottom: -6px;
}
.minuteIcon {
  display: inline-block;
  width: 28px;
  height: 20px;
  border: 0px solid red;
  background-color: #ddd;
  border-radius: 12px;
  margin-left: 5px;
}
.minuteIcon image {
  display: inline-block;
  width: 100%;
  height: 100%;
  border: 0px solid red;
}

.uploadBox {
  display: block;
  width: 100%;
  text-align: center;
}
.uploadWrap {
  display: block;
  width: 100px;
  text-align: center;
  margin: 0 auto;
}
.uploadBtn {
  display: block;
  width: 100px;
  background-color: #eee;
  height: 100px;
}
.uploadImg {
  display: block;
  width: 60px;
  height: 60px;
  margin: 0 auto;
  padding-top: 20px; 
}
.uploadTxt {
  display: block;
  width: 100px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  font-size: 14px;
}
.redStar {
  color: red;
}
/*
weui-cell
*/
.weui-cell-nop {
  padding: 0;
}

.weui-demo-dialog{
  visibility:hidden;
  opacity:0;
  transition:opacity .3s;
}
.weui-demo-dialog_show{
  visibility:visible;
  opacity:1;
}

.listDialog {
  display: inline-block;
  width: 95%;
  margin: 0 auto;
  border: 0px solid red;
  height: 200px;
  overflow: auto;
}
.myRadioStyle {
  border: 0px solid red;
  display: block;
  height: 40px;
  line-height: 40px;
  margin-bottom: 2px;
  border-bottom: 1px solid #eee;
}