/* pages/msgList/msgList.wxss */
.viewWrap {
  min-height: 100vh;
  border: 0px solid red;
}

.divWrap {
  display: block;
  height: 100%;
  border: 0px solid red;
  position: relative;
}
.banner {
  display:flex;
  height: 100%;
  height: 220px;
  border: 0px solid red;
  background-color: #004898;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.photoWrap {
  display: block;
  width: 110px;
  height: 110px;
  border-radius: 55px;
  background-color: #fff;
}
.photoWrap image {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 55px;
}
.photoText {
  display: block;
  border: 0px solid red;
  margin-top: 10px;
  color: #fff;
}
.listWrap {
  display: block;
  width: 92%;
  margin: 0 auto;
  border: 1px solid #fff;
  margin-top: -20px;
  background-color: #fff;
  border-radius: 6px;
  box-shadow: 3px 3px 2px #D2D2D2;
}
.listOnce {
  display: block;
  width: 100%;
  height: 45px;
  line-height: 45px;
  border-bottom: 1px solid #ddd;
}
.icon {
  display: flex;
  width: 45px;
  height: 45px;
  box-sizing: border-box;
  border: 0px solid red;
  float: left;
  align-items: center;
  justify-content: center;
}
.icon image {
  display: block;
  width: 60%;
  height: 60%;
}
.right {
  display: block;
  height: 45px;
  box-sizing: border-box;
  margin-left: 45px;
  border: 0px solid red;
}
.title {
  display: inline-block;
  height: 100%;
  width: 30%;
  box-sizing: border-box;
  float: left;
}
.cont {
  display: inline-block;
  height: 100%;
  width: 70%;
  box-sizing: border-box;
  float: left;
}